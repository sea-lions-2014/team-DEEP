<div class="row">
  <div class="small-2 large-3 columns"><p> </p></div>
  <div class="small-4 large-6 columns">
    <h2>Entitle an Image!</h2>
    <%= form_for [@user, @image] do |f|%>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>
  <div class="small-6 large-3 columns"></div>
</div>
<div class="row">
  <div class="small-2 large-3 columns"><p> </p></div>
  <div class="large-6 columns">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="small-6 large-3 columns"></div>
</div>
<div class="row">
    <div class="small-2 large-3 columns"><p> </p></div>

  <div class="small-4 large-6 columns">
    <%= f.submit "Load Image", :class => "button"%>
  </div>
    <div class="small-6 large-3 columns"></div>

</div>
<% end %>
