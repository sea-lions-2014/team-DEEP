<h2>Sign in to be Entitled</h2>

<div class="row">
  <div class="small-2 large-4 columns"><p> </p></div>
  <div class="small-4 large-4 columns">
    <%= form_for :session, url: sessions_path do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
   <div class="small-6 large-4 columns"><p> </p></div>
</div>
<div class="row">
  <div class="small-2 large-4 columns"><p> </p></div>
  <div class="small-4 large-4 columns">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="small-6 large-4 columns"><p> </p></div>
</div>
<div class="row">
  <div class="small-2 large-4 columns"><p> </p></div>
  <div class="small-4 large-4 columns">
    <%= f.submit "Log in", :class => "button" %>
  </div>
  <div class="small-6 large-4 columns"><p> </p></div>
</div>
<% end %>

