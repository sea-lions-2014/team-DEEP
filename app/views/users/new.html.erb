<div class="row">
  <div class="large-6 columns">
    <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
</div>
<div class="row">
  <div class="large-6 columns">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
</div>
<%=  f.submit :class => "button" %>
<% end %>