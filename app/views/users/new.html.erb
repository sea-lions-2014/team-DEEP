<h2>Sign Up</h2>
<div class="row">
  <div class="small-2 large-3 columns"><p> </p></div>
  <div class="small-4 large-6 columns">
    <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="small-6 large-3 columns"></div>
</div>
</div>
<div class="row">
  <div class="small-2 large-3 columns"><p> </p></div>
  <div class="small-4 large-6 columns">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="small-6 large-3 columns"></div>

</div>
<div class="row">
  <div class="small-2 large-3 columns"><p> </p></div>

  <div class="small-4 large-6 columns">
    <%=  f.submit :class => "button" %>
  </div>
  <div class="small-6 large-3 columns"></div>
  <% end %>
</div>